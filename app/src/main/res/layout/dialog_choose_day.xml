<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/text_mon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:gravity="center"
            android:layout_marginEnd="35.5dp"
            android:background="@drawable/day_state"
            android:text="@string/mon"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>

        <TextView
            android:id="@+id/text_tue"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="33.5dp"
            android:background="@drawable/day_state"
            android:gravity="center"
            android:text="@string/tue"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/text_wed"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:gravity="center"
            android:layout_marginEnd="35.5dp"
            android:background="@drawable/day_state"
            android:text="@string/wed"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>

        <TextView
            android:id="@+id/text_thu"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="33.5dp"
            android:background="@drawable/day_state"
            android:gravity="center"
            android:text="@string/thu"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_fri"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="@string/fri"
            android:layout_marginEnd="33.5dp"
            android:background="@drawable/day_state"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>

        <TextView
            android:id="@+id/text_sat"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="33.5dp"
            android:background="@drawable/day_state"
            android:gravity="center"
            android:text="@string/sat"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_sun"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/day_state"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/sun"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/frame_cancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00000000"
            android:contentDescription="@string/cancel_button"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_cancel" />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@android:color/darker_gray"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"/>

        <ImageButton
            android:id="@+id/frame_done"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00000000"
            android:contentDescription="@string/done_button"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_done" />
    </LinearLayout>
</LinearLayout>