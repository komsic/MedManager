<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/text_mon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:gravity="center"
            android:layout_marginEnd="35.5dp"
            android:background="@drawable/day_state"
            android:text="Mon"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>

        <TextView
            android:id="@+id/text_tue"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="33.5dp"
            android:background="@drawable/day_state"
            android:gravity="center"
            android:text="Tue"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/text_wed"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:gravity="center"
            android:layout_marginEnd="35.5dp"
            android:background="@drawable/day_state"
            android:text="Wed"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>

        <TextView
            android:id="@+id/text_thu"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="33.5dp"
            android:background="@drawable/day_state"
            android:gravity="center"
            android:text="Thu"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_fri"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:text="Fri"
            android:layout_marginEnd="33.5dp"
            android:background="@drawable/day_state"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>

        <TextView
            android:id="@+id/text_sat"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="33.5dp"
            android:background="@drawable/day_state"
            android:gravity="center"
            android:text="Sat"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_sun"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/day_state"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Sun"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/frame_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_cancel"/>

        </FrameLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@android:color/darker_gray"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"/>

        <FrameLayout
            android:id="@+id/frame_done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_done"/>

        </FrameLayout>
    </LinearLayout>

</LinearLayout>